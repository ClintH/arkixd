{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "allowJs": true,
    "types": [
      "vite/client",
      "@astrojs/image/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@images/*": [
        "./src/images/*"
      ]
    }
  }
}