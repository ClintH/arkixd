---
export interface Props {
  url: string;
}
const { url } = Astro.props;

const s = `background-image:linear-gradient(rgba(255, 255, 255, 0.7), rgba(255, 115, 142, 1)), url(${url});`;
---

<style>
  .img {
    background-repeat: no-repeat;
    background-size: cover;
    background-blend-mode: screen;
  }

  div {
    grid-area: 1 / 1 / 2 / 2;
  }
  section {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    height: 100%;
    width: 100%;
  }
</style>
<section>
  <div class="img" style={s}></div>
  <div>
    <slot />
  </div>
</section>
